#!/usr/bin/env python3
import sys
import csv
from argparse import ArgumentParser


AGGREGATIONS = {
    "add": sum,
    "mean": lambda ls: sum(ls) / len(ls),
}


def main():
    parser = ArgumentParser()
    parser.add_argument(
        "aggregator", help="Choose from: %s" % ", ".join(AGGREGATIONS.keys())
    )
    args = parser.parse_args()

    lines = [line for line in csv.reader(sys.stdin)]
    lengths = set([len(l) for l in lines])
    assert len(lengths) == 1 and lengths.pop() == 1

    lines = [line[0] for line in lines]

    try:
        floats = list(map(float, lines))
        print("%.3f" % AGGREGATIONS[args.aggregator](floats))

    except ValueError:
        print(
            "Couldn't convert at least one of the following to float: %s",
            ", ".join(lines),
            file=sys.stderr,
        )


if __name__ == "__main__":
    main()
